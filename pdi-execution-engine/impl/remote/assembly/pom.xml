  <modelVersion>4.0.0</modelVersion>
  <packaging>karaf-assembly</packaging>

  <artifactId>pdi-execution-remote-assembly</artifactId>

  <dependencies>
    <!--  base framework kar -->
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>framework</artifactId>
      <version>${karaf-maven-plugin.version}</version>
      <type>kar</type>
    </dependency>

    <!-- the following are feature files supporting the build configuration -->

    <dependency>
      <!-- scope is runtime so the feature repo is listed in etc/org.apache.karaf.features.cfg file, and features will installed into the system directory if specify in the plugin configuration -->
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>standard</artifactId>
      <classifier>features</classifier>
      <version>${karaf-maven-plugin.version}</version>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>enterprise</artifactId>
      <classifier>features</classifier>
      <version>${karaf-maven-plugin.version}</version>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.pentaho</groupId>
      <artifactId>pdi-execution-remote-engine-feature-server</artifactId>
      <version>${project.version}</version>
      <type>xml</type>
      <classifier>features</classifier>
      <scope>runtime</scope>
    </dependency>

    <!-- https://mvnrepository.com/artifact/org.apache.aries.rsa/repository -->
    <dependency>
      <groupId>org.apache.aries.rsa</groupId>
      <artifactId>rsa-features</artifactId>
      <classifier>features</classifier>
      <version>${aries.rsa.version}</version>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
